#include<memory>
#include<type_traits>
#include<iostream>

_LIBCPP_BEGIN_NAMESPACE_STD

namespace __smart
{

template<class _Tp>
struct __default_deleter
{
    void operator()(_Tp* __ptr) const { delete __ptr; }

//     template<size_t _S>
//     void operator()(*(_Tp(&__ptr)__ptr)) const { delete[] __p; }
};

template<class _Tp, class _Deleter = default_deleter<_Tp>, class _Alloc = allocator<_Tp>>
struct __counter
{
    _Tp* __ptr;
    _Deleter __deleter;
    _Alloc __alloc;

public:
    size_t __count = 1;

    __counter(_Tp* __ptr, _Deleter __deleter = _Deleter {}, _Alloc __alloc = _Alloc {})
        : __ptr(__ptr), __deleter(__deleter), __alloc(__alloc) {}

    void __destroy()
    {
        __deleter(__ptr);
        // TODO: use __alloc to deallocate "this" without using rebind
    }

    void __inc()
    { __count++; }
    bool __dec()
    {
        __count--;
        cout << __count << endl;
        if (__count == 0)
        {
            __destroy();
            return true; // it's okay to destroy me
        }

        return false; // don't delete me
    }
};

template<class _Tp>
class shared_ptr
{
public:
    _Tp* __ptr;
    __counter<_Tp>* __count;

    bool __empty() const
    { return get() == 0; }

#if _LIBCPP_STD_VER > 14
    using element_type = remove_extent_t<_Tp>;
    using weak_type = weak_ptr<_Tp>;
#else
    typedef _Tp element_type;
#endif

// construction
    constexpr shared_ptr() noexcept : __ptr(nullptr), __count(new __counter<_Tp>(nullptr)) {}

    template<class _Yp>
    shared_ptr(_Yp* __ptr) : __ptr(__ptr), __count(new __counter(__ptr)) {}

    template<class _Yp, class _Deleter>
    shared_ptr(_Yp* __ptr, _Deleter __deleter)
        : __ptr(__ptr), __count(new __counter(__ptr, __deleter)) {}

    template<class _Yp, class _Deleter, class _Alloc>
    shared_ptr(_Yp* __ptr, _Deleter __deleter, _Alloc __alloc)
        : __ptr(__ptr), __count(new __counter(__ptr, __deleter, __alloc)) {}

    template<class _Deleter>
    shared_ptr(nullptr_t __ptr, _Deleter __deleter)
        : __ptr(__ptr), __count(new __counter(__ptr, __deleter)) {}

    template<class _Deleter, class _Alloc>
    shared_ptr(nullptr_t __ptr, _Deleter __deleter, _Alloc /*TODO: implement this*/)
        : __ptr(__ptr), __count(new __counter(__ptr, __deleter)) {}

    shared_ptr(shared_ptr const& __r) noexcept
        : __ptr(__r.__ptr), __count(__r.__count)
    {
        cout << "copy called (1)" << endl;
        __count->__inc();
    }

    template<class _Yp>
    shared_ptr(shared_ptr<_Yp> const& __r) noexcept
        : __ptr(__r.__ptr), __count((__counter<_Tp>*)__r.__count)
    {
        cout << "copy called (2)" << endl;
        __count->__inc();
    }

    template<class _Yp>
    shared_ptr(shared_ptr<_Yp>&& __r) noexcept
        : __ptr(__r.__ptr), __count(__r.__count)
    {
        __r.__ptr = nullptr;

        cout << "move called" << endl;
        __count->__inc();
    }

// destruction
    ~shared_ptr() {
        cout << "delete called" << endl;
        if (__count->__dec()) // __dec will return true if the pointer has been destroyed
            delete __count;
    }

// assignment
    shared_ptr& operator=(shared_ptr const& __r) noexcept
    {
        shared_ptr(__r).swap(*this);
        return *this;
    }

    template<class _Yp>
    shared_ptr& operator=(shared_ptr<_Yp> const& __r) noexcept
    {
        shared_ptr(__r).swap(*this);
        return *this;
    }

    shared_ptr& operator=(shared_ptr&& __r) noexcept
    {
        shared_ptr(_VSTD::move(__r)).swap(*this);
        return *this;
    }

    template<class _Yp>
    shared_ptr& operator=(shared_ptr<_Yp>&& __r) noexcept
    {
        shared_ptr(_VSTD::move(__r)).swap(*this);
        return *this;
    }

    template<class _Yp, class _Deleter>
    shared_ptr& operator=(unique_ptr<_Yp, _Deleter>&& __r) noexcept
    {
        shared_ptr(_VSTD::move(__r)).swap(*this);
        return *this;
    }

// observers
    _Tp* get() const noexcept { return __ptr; }

    _Tp& operator* () const noexcept
    {
        if (!__empty())
            return *get();
        return 0;
    }

    _Tp* operator->() const noexcept
    {
        return get(); // if __empty() is true nullptr will be returned anyway
    }

    _Tp& operator[](ptrdiff_t __i) const
    {
        if (!__empty() && __i >= 0)
            return get()[__i];
        return 0;
    }

    long use_count() const noexcept
    {
        if (__empty()) return 0;
        return __count->__count;
    }

    explicit operator bool() const noexcept
    {
        return get() != 0;
    }

    template<class _Yp>
    bool owner_before(shared_ptr<_Yp> const& __r) const noexcept
    { return __count < __r.__count; }

    template<class _Yp>
    bool owner_before(weak_ptr<_Yp>   const& __r) const noexcept
    { return __count < __r.__cntrl_; }

// modifiers
    void swap(shared_ptr& __r) noexcept
    {
        _VSTD::swap(__ptr, __r.__ptr);
        _VSTD::swap(__count, __r.__count);
    }

    void reset() noexcept
    { shared_ptr().swap(*this); }

    template<class _Yp>
    void reset(_Yp* __p) noexcept
    { shared_ptr(__p).swap(*this); }

    template<class _Yp, class _Deleter>
    void reset(_Yp* __p, _Deleter __deleter) noexcept
    { shared_ptr(__p, __deleter).swap(*this); }

    template<class _Yp, class _Deleter, class _Alloc>
    void reset(_Yp* __p, _Deleter __deleter, _Alloc __alloc) noexcept
    { shared_ptr(__p, __deleter, __alloc).swap(*this); }
};

}

_LIBCPP_END_NAMESPACE_STD